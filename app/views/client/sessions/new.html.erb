<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: root_path) do |f| %>

      <p>Email:</p>
      <%= f.email_field :email, class: 'form-control' %>

      <p>Password:</p>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
